<div>
  <div>
    <h2>配送先登録/一覧</h2>
  </div>

  <div>
    <%= form_with model: @address, url: shipping_addresses_path,mthod: :post do |f| %>

    <div>
      <p>郵便番号（ハイフンなし）</p>
      <p><%= f.text_field :postcode %></p>
    </div>

    <div>
      <p>住所</p>
      <p><%= f.text_field :address %></p>
    </div>

    <div>
      <p>宛名</p>
      <p><%= f.text_field :name %></p>
      <p><%= f.submit "新規登録" %></p>
    </div>
    <% end %>
  </div>

  <table>
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postcode %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_shipping_address_path(address.id) %><%= link_to "削除する", shipping_addresses_path(address.id), method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>





</div>