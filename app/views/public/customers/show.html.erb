<h1>マイページ</h1>

<div>
  <div><strong>登録情報</strong></div>
  <div><%= link_to " 編集する", customers_information_edit_path(@customer) %></div>
</div>

<table>
  <tbody>
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postcode %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>

<div>
  <div><strong>配送先</strong></div>
  <div><%= link_to " 一覧を見る", shipping_addresses_path %></div>
</div>

<div>
  <div><strong>注文履歴</strong></div>
  <div><%= link_to " 一覧を見る", orders_path %></div>
</div>