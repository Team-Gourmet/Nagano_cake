<h1><strong>会員情報編集</strong></h1>


<% form_with model :@costomer, url: customers_information_path do |f| %>

<tr>
  <th>氏名</th>
  <td><%= f.text_field :last_name %> </td>
  <td><%= f.text_field :first_name %> </td>
</tr>

<tr>
  <th>フリガナ</th>
  <td><%= f.text_field :last_name_kana %> </td>
  <td><%= f.text_field :first_name_kana %> </td>
</tr>

<tr>
  <th>郵便番号</th>
  <td> <%= f.text_field :postcode %> </td>
</tr>

<tr>
  <th>住所</th>
  <td> <%= f.text_field :address %> </td>
</tr>

<tr>
  <th>電話番号</th>
  <td> <%= f.text_field :phone_number %> </td>
</tr>

<tr>
  <th>メールアドレス</th>
  <td> <%= f.email_field :email %> </td>
</tr>


<tr>
  <td><%= f.submit "編集内容を保存" %></td>
  <td><%= link_to "退会する", cutomers_quit_path %></td>
</tr>
