<div>
  <div>
    <h2>注文情報入力</h2>
  </div>
</div>

<div>
  <%= form_with model: @order, url: orders_check_path, method: :post do |f|  %>
  <h2><storng>支払方法</storng></h2>
  
  <div>
    <ul>
      <li>
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
      </li>
      <li>
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>
      </li>
    </ul>
  </div>
  
  <h2><strong>お届け先</strong></h2>
  <div>
    <ul>
      <li>
        <%= f.radio_button :select_address, "0" %>
        <%= f.label :select_address_0, "ご自身の住所" %>
        <p>〒<%= @customer.postcode %><%= @customer.address %></p>
        <p><%= @customer.last_name + @customer.first_name %></p>
      </li>
      
      <li>
        <%= f.radio_button :select_address, "1" %>
        <%= f.label :select_address_1, "登録先住所から選択" %>
        <p><%= f.select :address_id, options_from_collection_for_select(current_customer.shipping_addresses, :id, :address_display) %></p>
      </li>
      
      <li>
        <%= f.radio_button :select_address, "2" %>
        <%= f.label :select_address_2, "新しいお届け先" %>
        <div>
          <p>郵便番号（ハイフンなし）</p>
          <p><%= f.text_field :postcode %></p>
        </div>
        <div>
          <p>住所</p>
          <p><%= f.text_field :address %></p>
        </div>
        <div>
          <p>宛名</p>
          <p><%= f.text_field :name %></p>
        </div>
      </li>
    </ul>
  </div>
  <div>
    <%= f.submit "確認画面へ進む" %>
  </div>
  <% end %>
</div>