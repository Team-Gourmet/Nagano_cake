<div class="container">
  <div class="row my-4 ml-3">
    <h3>注文履歴一覧</h3>
  </div>

  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th style="width: 9%">注文日</th>
          <th style="width: 38%">配送先</th>
          <th style="width: 24%">注文商品</th>
          <th style="width: 8%">支払金額</th>
          <th style="width: 10%">ステータス</th>
          <th style="width: 11%">注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= order.created_at.strftime('%Y/%m/%d') %>
          </td>
          <td>
            〒<%= order.postcode %></br>
            <%= order.address %></br>
            <%= order.name %>
          </td>
          <td>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %></br>
            <% end %>
         </td>
         <td>
           <%= order.total_amount.to_s(:delimited) %>円
         </td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
        </tr>
        <% end %>
       </tbody>
    </table>
  </div>

</div>