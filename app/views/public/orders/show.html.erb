<div>
  <div>
    <h3>注文履歴詳細</h3>
  </div>
  <div>
    <div>
      <div>
        <h5>注文情報</h5>
      </div>
      <div>
        <table>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td> 
            　〒<%= @order.postcode %></br>
             　 <%= @order.address %></br>
             　 <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </table>
      </div>
    </div>
    <div>
      <div>
        <h5>請求情報</h5>
      </div>
      <div>
        <table>
          <tr>
            <th>商品合計</th>
            <td><%= ( @order.total_amount - @order.shipping_fee).to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.shipping_fee %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @order.total_amount.to_s(:delimited) %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div>
    <div>
      <h5>注文内容</h5>
    </div>
    <table>
      <thead>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </thead>
      <tbody>
        <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price_with_tax.to_s(:delimited) %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= (order_detail.price_with_tax * order_detail.quantity).to_s(:delimited) %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>