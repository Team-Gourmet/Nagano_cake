<div class="container">
  <div class="row my-4 ml-5">
    <h4 class="bg-light text-center col-3">ジャンル一覧・追加</h4>
  </div>


<%= form_with model: @genre, url: admin_genres_path do |f| %>
<div class="d-flex justify-content-between align-items-center col-6">
<p><%= f.label :"ジャンル名" %></p>
<P><%= f.text_field :name %></P>
<P><%= f.submit '新規登録', class: "btn btn-success btn-lg" %></P>
</div>
<% end %>
<table class="table col-4 mt-4">
  <thead class="bg-light">
      <th colspan="2">ジャンル</tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td>
        <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>
</div>

