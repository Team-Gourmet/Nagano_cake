<div class="container">
  <div class="row my-4">
      <h2 class="bg-light text-center">商品詳細</h2>
  </div>
  <div class="d-flex justify-content-start">
    <div class="col-4">
      <%= image_tag @item.get_image(300, 200) %>
    </div>

   <div>
      <div class="d-flex justify-content-start">
        <p class="col-3">商品名</p>
        <p class="col-6"><%= @item.name %></p>
      </div>

      <div class="d-flex justify-content-start">
        <p class="col-3">商品説明</p>
        <p class="col-6"><%= @item.description %></p>
      </div>

      <div class="d-flex justify-content-start">
        <p class="col-3">ジャンル</p>
        <p class="col-6"><%= @item.genre.name %></p>
      </div>

      <div class="d-flex justify-content-start">
        <p class="col-3">税込価格<br>(税抜価格)</p>
        <p class="col-6"><%= (@item.price *1.1).floor.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円 </p>
      </div>


       <div class="d-flex justify-content-start">
        <p class="col-3">販売ステータス</p>

         <p class="d-flex justify-content-start ml-3">
              <%if @item.is_sales_status  %>
              <p>販売中</p>
              <% else %>
              <p>販売停止中</p>
              <% end %>
         </p>
       </div>
        <div>
          <%= link_to "編集する", edit_admin_item_path(@item.id) %>
        </div>
     </div>
    </div>
</div>