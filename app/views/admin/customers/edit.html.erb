<div>
<h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>
 <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
<div>
  <p>会員ID</p>
  <p><%= @customer.id %></p>
</div>

<div>
  <p>氏名</p>
  <p><%= f.text_field :last_name %></p>
  <p><%= f.text_field :first_name %></p>
</div>

<div>
  <p>フリガナ</p>
  <p><%= f.text_field :last_name_kana %></p>
  <p><%= f.text_field :first_name_kana %></p>
</div>

<div>
  <p>郵便番号</p>
  <p><%= f.text_field :postcode %></p>
</div>

<div>
  <p>住所</p>
  <p><%= f.text_field :address %></p>
</div>

<div>
  <p>電話番号</p>
  <p><%= f.text_field :phone_number %></p>
</div>

<div>
  <p>メールアドレス</p>
  <p><%= f.email_field :email %></p>
</div>

<div>
  <p>会員ステータス</p>
  <p>
    <%= f.radio_button :is_withdrawal, false %>
    <%= f.label :is_withdrawal, '有効', value: false %>
    <%= f.radio_button :is_withdrawal, true %>
    <%= f.label :is_withdrawal, '退会', value: true %>
  </p>
  
</div>
<div>
  <td><%= f.submit "編集を保存" %></td>
</div>
</div>